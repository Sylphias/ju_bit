module fader #(
    SPD  = 16 : SPD >= 0, // fade speed
    WIDTH = 8 : WIDTH >= 1// resolution
  )(
    input clk,  // clock
    input rst,  // reset
    input frame,
    input offset [WIDTH],
    output value [WIDTH]
  ) {
  
  counter led_fade(#DIV(SPD), .clk(clk), .rst(rst));
  
  always {
    value = WIDTHx{frame} & (led_fade.value+offset);
  }
}
