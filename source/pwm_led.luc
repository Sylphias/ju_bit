module pwm_led #(
    MAXV = 9h110: MAXV >= 1, // max value
    MINV = 9h0: MINV >= 0, // min value
    WIDTH = 8 : WIDTH >= 1// resolution
  )(
    input clk,  // clock
    input rst,  // reset
    input value [WIDTH],
    output led
  ) {

  pwm p (#WIDTH($clog2(MAXV)), #TOP(MAXV), .clk(clk), .rst(rst), .update(1));
    
  always {
    p.value = value;
    led = p.pulse;
  }
}
